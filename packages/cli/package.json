{
  "name": "@luciformresearch/ragforge-cli",
  "version": "0.3.3",
  "description": "Command-line interface for RagForge. Introspect Neo4j schemas, generate type-safe clients, manage embeddings, and bootstrap RAG projects from YAML configs.",
  "license": "LRSL-1.1 (See LICENSE file for more information)",
  "author": "Lucie Defraiteur <luciedefraiteur@luciformresearch.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LuciformResearch/ragforge.git",
    "directory": "packages/cli"
  },
  "bugs": {
    "url": "https://github.com/LuciformResearch/ragforge/issues"
  },
  "homepage": "https://github.com/LuciformResearch/ragforge/tree/main/packages/cli#readme",
  "type": "module",
  "main": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "bin": {
    "ragforge": "./dist/esm/index.js"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "generate:version": "node scripts/generate-version.js",
    "prebuild": "npx tsx ../../scripts/stop-daemon.ts || true",
    "build:esm": "npm run generate:version && tsc -p tsconfig.esm.json",
    "build:types": "tsc -p tsconfig.types.json",
    "copy:templates": "cp -r src/commands/templates dist/esm/commands/",
    "build": "npm run clean && npm run build:esm && npm run build:types && npm run copy:templates && chmod +x dist/esm/index.js",
    "prepublishOnly": "npm run build",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "lint": "eslint . --ext .ts --max-warnings=0",
    "format": "prettier -w ."
  },
  "keywords": [
    "rag",
    "neo4j",
    "cli",
    "code-generation",
    "typescript",
    "tooling",
    "developer-tools"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@luciformresearch/ragforge": "^0.3.3",
    "@modelcontextprotocol/sdk": "^1.24.3",
    "dotenv": "^16.3.1",
    "fastify": "^5.6.2",
    "ink": "^5.0.1",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "yaml": "^2.3.4"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.3",
    "typescript": "^5.3.0"
  }
}
